<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Videos</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <span class="navbar-brand">SQLWeb - Videos</span>

            <div class="d-flex align-items-center gap-3 text-white">
                <span>
                    <%= user.fullName %> (<%= user.email %>)
                </span>

                <form method="POST" action="/logout" class="m-0">
                    <button class="btn btn-sm btn-outline-light" type="submit">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container py-4">

        <!-- Search section (Top) -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Search Videos</h5>

                <form method="GET" action="/videos" class="row g-2">
                    <div class="col-md-10">
                        <input class="form-control" name="q" placeholder="Type to search..." value="<%= q %>" />
                    </div>
                    <div class="col-md-2 d-grid">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </form>

                <% if (results.length> 0) { %>
                    <hr />
                    <h6 class="mb-3">Results (top section)</h6>

                    <div class="list-group">
                        <% results.forEach(v=> { %>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">
                                        <%= v.title %>
                                    </div>
                                    <div class="text-muted small">Video ID: <%= v.id %>
                                    </div>
                                </div>

                                <form method="POST" action="/favorites" class="m-0">
                                    <input type="hidden" name="videoId" value="<%= v.id %>" />
                                    <input type="hidden" name="title" value="<%= v.title %>" />
                                    <input type="hidden" name="backTo" value="/videos?q=<%= encodeURIComponent(q) %>" />
                                    <button class="btn btn-success btn-sm" type="submit">Save</button>
                                </form>
                            </div>
                            <% }) %>
                    </div>
                    <% } else if (q && q.trim().length> 0) { %>
                        <hr />
                        <div class="alert alert-warning m-0">No results found.</div>
                        <% } %>

            </div>
        </div>

        <!-- Favorites section (Bottom) -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">My Favorites (bottom section)</h5>

                <% if (favorites.length===0) { %>
                    <div class="alert alert-info m-0">No favorites yet. Search and save some videos.</div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-striped align-middle">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Video ID</th>
                                        <th>Saved At</th>
                                        <th style="width:120px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% favorites.forEach(f=> { %>
                                        <tr>
                                            <td class="fw-semibold">
                                                <%= f.title %>
                                            </td>
                                            <td>
                                                <%= f.videoId %>
                                            </td>
                                            <td>
                                                <%= f.createdAt %>
                                            </td>
                                            <td>
                                                <form method="POST" action="/favorites/delete" class="m-0">
                                                    <input type="hidden" name="videoId" value="<%= f.videoId %>" />
                                                    <input type="hidden" name="backTo"
                                                        value="/videos?q=<%= encodeURIComponent(q) %>" />
                                                    <button class="btn btn-outline-danger btn-sm"
                                                        type="submit">Remove</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <div class="text-muted small">
                            *Reordering is not available (as required).
                        </div>
                        <% } %>

            </div>
        </div>

    </div>

</body>

</html>